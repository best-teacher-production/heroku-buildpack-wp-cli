#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
# set -x          # enable debugging

# Configure directories
BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
echo $PWD
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR

echo "DOWNLOAD_PATH = " $BUILD_DIR/$$VENDOR_DIR

curl -L --silent https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
